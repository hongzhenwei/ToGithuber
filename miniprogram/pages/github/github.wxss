.daily{height:200rpx;line-height:200rpx;background-color:rgb(185,31,39)}
.weekly{height:100rpx;line-height:100rpx;background-color:rgb(36,59,73);position:relative;top:50px}
.monthly{height:200rpx;line-height:200rpx;background-color:rgb(149,192,183)}

.repoitem{box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);overflow-x:scroll;background-color:rgba(255, 255, 255, 0.588);border-radius:20rpx}

.pure_top{
  position: fixed;
  top:0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: -1;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.788);
}

.pure_top::after{
  content: "";
  width: 100%;
  height: 50%;
  position: absolute;
  left: 0;
  bottom:0;
  z-index: -1;
  border-radius: 80% 80% 0 0;
background: linear-gradient(160deg,#1496f1, #E0F0FA);}

.cover{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  background:rgba(0, 0, 0, 0.007);
  z-index: 9999

  /* opacity:0.5 */
}

.picker{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: auto;
  background-color: white;
  z-index: 9999
}

.attach{
  border-radius:60rpx;
  border:none;
  position:fixed;
  left:0;
  z-index:999;
  width:100%;
  background-color: rgba(0, 0, 0, 0.007);
  display: inline-flex;
  justify-content: center
}

