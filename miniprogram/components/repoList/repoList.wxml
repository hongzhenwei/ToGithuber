<view class='solid-bottom padding margin flex' bindtap='torepodetail' data-full_name="{{item.full_name}}" style='box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);overflow-x:scroll'>
  <view class='flex-treble margin-right'>
    <view class='padding-xs text-bold text-lg solid-bottom font-ns'>
